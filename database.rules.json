{
  "rules": {
    "posts": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$postId": {
        ".validate": "newData.hasChildren(['userId', 'imageUrl', 'caption', 'timestamp'])",
        "userId": {
          ".validate": "newData.val() === auth.uid"
        },
        "likes": {
          "$userId": {
            ".validate": "newData.isBoolean()",
            ".write": "auth != null && auth.uid === $userId"
          }
        },
        "comments": {
          ".read": "auth != null",
          ".write": "auth != null",
          "$commentId": {
            ".validate": "newData.hasChildren(['userId', 'text', 'timestamp'])",
            "userId": {
              ".validate": "newData.val() === auth.uid"
            }
          }
        }
      }
    },
    "users": {
      ".read": "auth != null",
      "$userId": {
        ".write": "auth != null && auth.uid === $userId",
        ".validate": "newData.hasChildren(['username', 'email'])"
      }
    }
  }
}