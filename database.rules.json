{
  "rules": {
    "posts": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$postId": {
        ".validate": "newData.hasChildren(['userId', 'content', 'timestamp'])",
        "likes": {
          ".read": "auth != null",
          ".write": "auth != null"
        },
        "comments": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "users": {
      ".read": "auth != null",
      "$userId": {
        ".read": "auth != null",
        
        "username": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $userId"
        },
        "email": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $userId"
        },

        "photos": {
          ".read": "auth != null",
          "$photoId": {
            ".read": "auth != null",
            
            "likes": {
              ".read": "auth != null",
              "$likerId": {
                ".write": "auth != null"
              }
            },

            "comments": {
              ".read": "auth != null",
              ".write": "auth != null"
            }
          }
        }
      }
    }
  }
}
